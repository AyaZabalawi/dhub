@model IEnumerable<SurveyResponse>

@{
    ViewData["Title"] = "Survey Responses";
}

<h2>Survey Responses</h2>

<table class="table">
    <thead>
        <tr>
            <th>Survey</th>
            <th>Submission Date</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var response in Model)
        {
            <tr>
                <td>@response.Survey.Name</td>
                <td>@response.SubmissionDate</td>
                <td>
                    <a href="@Url.Action("Details", "SurveyResponse", new { id = response.ResponseID })" class="btn btn-info">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
