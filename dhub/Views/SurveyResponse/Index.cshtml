@model IEnumerable<SurveyResponse>

@{
    ViewData["Title"] = "Survey Responses";
}

<h2>@ViewData["Title"]</h2>

<table class="table mt-3">
    <thead>
        <tr>
            <th>Response ID</th>
            <th>Survey Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var response in Model)
        {
            <tr>
                <td>@response.ResponseID</td>
                <td>@response.Survey.Name</td>
                <td>
                    <a href="@Url.Action("Details", "SurveyResponse", new { id = response.ResponseID })" class="btn btn-info">View Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Index", "Survey")" class="btn btn-primary mt-3">Back to Surveys</a>
