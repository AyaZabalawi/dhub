@model Survey

@{
    ViewData["Title"] = "Edit Survey";
}

<h2>Edit Survey</h2>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div id="questions-list">
        @{
            var questions = Model.Questions.ToList(); 
        }

        @for (int i = 0; i < questions.Count; i++)
        {
            <div class="form-group">
                <label>Question @(i + 1)</label>
                <input type="hidden" name="Questions[@i].QuestionID" value="@questions[i].QuestionID" />

                <label>Question Text</label>
                <input name="Questions[@i].QuestionText" class="form-control" value="@questions[i].QuestionText" />

                <label>Is Required</label>
                <input type="checkbox" name="Questions[@i].IsRequired" @(questions[i].IsRequired ? "checked" : "") />

                <label>Is Hidden</label>
                <input type="checkbox" name="Questions[@i].IsHidden" @(questions[i].IsHidden ? "checked" : "") />

                <label>Question Type</label>
                <select id="questionType-@i" name="Questions[@i].QuestionType" class="form-control">
                    <option value="TextInput" @(questions[i].QuestionType == QuestionType.TextInput ? "selected" : "")>Text Input</option>
                    <option value="Dropdown" @(questions[i].QuestionType == QuestionType.Dropdown ? "selected" : "")>Dropdown</option>
                    <option value="RadioButton" @(questions[i].QuestionType == QuestionType.RadioButton ? "selected" : "")>Radio Button</option>
                    <option value="MultipleSelect" @(questions[i].QuestionType == QuestionType.MultipleSelect ? "selected" : "")>Multiple Select</option>
                </select>

                <div class="form-group" id="options-container-@i">
                    <label>Options</label>
                    <ul>
                        @for (int j = 0; j < questions[i].Options.Length; j++)
                        {
                            <li>
                                <input type="text" class="form-control" name="Questions[@i].Options[@j]" value="@questions[i].Options[j]" />
                                <button type="button" class="btn btn-danger btn-sm remove-option">Remove</button>
                            </li>
                        }
                    </ul>
                    <button type="button" class="btn btn-secondary btn-sm add-option" data-question-index="@i">Add Option</button>
                </div>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
           
            $('select[id^="questionType-"]').each(function () {
                var index = $(this).attr('id').split('-')[1];
                $(this).val($(this).find('option:selected').val());
            });

           
            $('.add-option').click(function () {
                var index = $(this).data('question-index');
                var optionsContainer = $('#options-container-' + index + ' ul');
                var optionCount = optionsContainer.children('li').length;
                optionsContainer.append('<li><input type="text" class="form-control" name="Questions[' + index + '].Options[' + optionCount + ']" /><button type="button" class="btn btn-danger btn-sm remove-option">Remove</button></li>');
            });

            
            $(document).on('click', '.remove-option', function () {
                $(this).closest('li').remove();
            });
        });
    </script>
}
