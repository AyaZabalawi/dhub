@model IEnumerable<Survey>

@{
    ViewData["Title"] = "Surveys";
}

<h2>Surveys</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Survey</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.SurveyID" class="btn btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.SurveyID" class="btn btn-info">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
