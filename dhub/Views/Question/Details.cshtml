@model Question

@{
    ViewData["Title"] = "Question Details";
}

<h1>@Model.QuestionText</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">Question Type</dt>
        <dd class="col-sm-10">@Model.QuestionType</dd>

        <dt class="col-sm-2">Is Required</dt>
        <dd class="col-sm-10">@Model.IsRequired</dd>

        <dt class="col-sm-2">Is Hidden</dt>
        <dd class="col-sm-10">@Model.IsHidden</dd>

        <dt class="col-sm-2">Options</dt>
        <dd class="col-sm-10">
            @if (Model.Options != null && Model.Options.Any())
            {
                <ul>
                    @foreach (var option in Model.Options)
                    {
                        <li>@option</li>
                    }
                </ul>
            }
            else
            {
                <span>No Options</span>
            }
        </dd>
    </dl>
</div>

<a asp-controller="Question" asp-action="Index" class="btn btn-primary">Back to List</a>
